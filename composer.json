{
    "require": {
        "php": "7.4.*",
        "slim/slim": "^4.10",
        "slim/psr7": "^1.5",
      "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "classmap": [
            "app"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "scripts": {
        "server": "php -S localhost:8000 -t public public/index.php",
        "test": "./vendor/bin/phpunit ./tests/",
        "tests": "./vendor/bin/phpunit ./tests/"
    }
}
